{% extends 'Layouts/base.html.twig' %}

{%  block javascript %}
<script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>
{% endblock %}

{% block body %}
    <div id="app">
        <div v-bind:class="{theme : theme}">
            <div class="container container-fluid">
                <div class="col-md-12">
                    <h1>Test technique : lancer de dés</h1>
                    <p>
                        Jeu de lancer de dés.<br>
                        Deux joueurs peuvent s'affronter.
                    </p>
                </div>

                {% set urlLocal = path("accueil_choixPseudo") %}
                {% set urlScore = path('score_list') %}

                <div class="buttons text-center">
                    <div class="row">
                        <div class="col">
                            <a href = {{ urlLocal }}>
                                <button type="button" class="btn">Jouer en local</button></a>
                        </div>
                        <div class="col">
                            <a href = {{ urlScore }}>
                                <button type="button" class="btn">Voir les scores</button></a>
                        </div>
                        <div class="col">
                            <button type="button" class="btnTheme btn" @click="showModal = true; theme = !theme">Changer le thème</button>
                            <modal v-if="showModal && theme" @close="showModal = false">
                                <h3 slot="header">Information</h3>
                            </modal>
                        </div>


                        <script type="text/x-template" id="modal-template">
                            <transition name="modal">
                                <div class="modal-mask">
                                    <div class="modal-wrapper">
                                        <div class="modal-container">

                                            <div class="modal-header">
                                                <slot name="header">
                                                    default header
                                                </slot>
                                            </div>

                                            <div class="modal-body">
                                                <slot name="body">
                                                    Cette fonctionalité n'est pas toute a fait terminée,
                                                    le changement de thème ne s'applique que sur la page d'accueil.
                                                </slot>
                                            </div>

                                            <div class="modal-footer">
                                                <slot name="footer">
                                                    <button class="btn btnModal" @click="$emit('close')">
                                                        Fermer
                                                    </button>
                                                </slot>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </transition>
                        </script>



                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/Accueil/app.js') }}"></script>
{% endblock %}