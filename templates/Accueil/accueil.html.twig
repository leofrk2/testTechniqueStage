{% extends 'Layouts/base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}


{% block body %}
    <div class="container">
            <div class="col-md-12">
                <h1>Test technique : lancer de dés</h1>
                <p>
                    Petit jeu de lancer de dés, veuillez choisir si vous souhaitez jouer en ligne ou en local.
                </p>
            </div>

    {% set urlOnline = path("jeu_online_index") %}
    {% set urlLocal = path("jeu_local_index") %}
        {% set urlScore = path('score_list') %}

    <div class="buttons text-center">
        <div class="row">
            <div class="col">
                <a href = {{ urlLocal }}>
                    <button type="button" class="btn btn-primary">Jouer en local</button></a>
            </div>
            <div class="col">
                <a href = {{ urlOnline }}>
                    <button type="button" class="btn btn-primary">Jouer en ligne</button></a>
            </div>
            <div class="col">
                <a href = {{ urlScore }}>
                    <button type="button" class="btn btn-primary">Voir les scores</button></a>
            </div>
        </div>
    </div>



    </div>

{% endblock %}