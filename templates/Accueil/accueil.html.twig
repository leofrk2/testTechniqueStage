{% extends 'Layouts/base.html.twig' %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{%  block javascript %}
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.13/dist/vue.js"></script>
{% endblock %}



{% block body %}




    <div id="app">
        <div v-bind:class="{theme : theme}">
            <div class="container">
                <div class="col-md-12">
                    <h1>Test technique : lancer de dés</h1>
                    <p>
                        Petit jeu de lancer de dés, veuillez choisir si vous souhaitez jouer en ligne ou en local.
                    </p>
                </div>

                {% set urlOnline = path("jeu_online_index") %}
                {% set urlLocal = path("jeu_local_index") %}
                {% set urlScore = path('score_list') %}

                <div class="buttons text-center">
                    <div class="row">
                        <div class="col">
                            <a href = {{ urlLocal }}>
                                <button type="button" class="btn1 btn">Jouer en local</button></a>
                        </div>
                        <div class="col">
                            <a href = {{ urlOnline }}>
                                <button type="button" class="btn2 btn">Jouer en ligne</button></a>
                        </div>
                        <div class="col">
                            <a href = {{ urlScore }}>
                                <button type="button" class="btn3 btn">Voir les scores</button></a>
                        </div>
                        <div class="col">
                            <button type="button" class="btn4 btn show-modal" @click="showModal = true; theme = !theme">Changer le thème</button>
                            <modal v-if="showModal && theme" @close="showModal = false">
                                <h3 slot="header">Information</h3>
                            </modal>
                        </div>


                        <script type="text/x-template" id="modal-template">
                            <transition name="modal">
                                <div class="modal-mask">
                                    <div class="modal-wrapper">
                                        <div class="modal-container">

                                            <div class="modal-header">
                                                <slot name="header">
                                                    default header
                                                </slot>
                                            </div>

                                            <div class="modal-body">
                                                <slot name="body">
                                                    Cette fonctionalitée n'est pas toute a fait terminée,
                                                    le changement de thème ne s'applique que sur la page d'accueil.
                                                </slot>
                                            </div>

                                            <div class="modal-footer">
                                                <slot name="footer">
                                                    <button class="btn" @click="$emit('close')">
                                                        Fermer
                                                    </button>
                                                </slot>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </transition>
                        </script>



                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('js/Accueil/app.js') }}"></script>
{% endblock %}