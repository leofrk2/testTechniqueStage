{% extends "Layouts/base.html.twig" %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
{% endblock %}

{% block title %}
    Scores
{% endblock %}


{% block body %}
    <div class="container">
        <h1>Meilleurs scores</h1>
        <div class="mid">
            <table class="header table table-striped">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Score</th>
                </tr>

                </thead>
            </table>
            <div class="mb-4"></div>
            {% if not scores is defined %}
            <p>
                Pas de scores pour le moment.
            </p>
        {% elseif scores is defined %}
            <div class="box overflow-auto">
                <table class="table table-striped">
                    <tbody>

                    {% for score in scores %}
                        <tr>
                            <td>{{ score.pseudo }}</td>
                            <td>{{ score.score }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% endif %}

            </div>

            {% set urlAccueil = path('accueil_index') %}
            <a href="{{ urlAccueil }}">
                <button type="button" class="btn btn-primary">Retour Ã  l'accueil</button></a>



        </div>
    </div>
{% endblock %}
