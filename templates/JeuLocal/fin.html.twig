{% extends "Layouts/base.html.twig" %}

{% block title %}
    Fin !
{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/accueil.css') }}">
    <link rel="stylesheet" href="{{ asset('css/JeuLocal/fin.css') }}">
{% endblock %}

{% block body %}

    <div class="container">
        <h1>Fin !</h1>

        {% if gagnant is defined %}
        <p>
            Gagnant : Joueur {{ gagnant }} <br>
            Score : {{ resultat }}<br>

            <br>
            Entrez votre pseudo pour enregistrer votre score : <br>


        </p>
        {{ form_start(Form) }}
        {{ form_widget(Form) }}
        {{ form_end(Form) }}

            {% set urlAccueil = path('accueil_index') %}
            <a href="{{ urlAccueil }}">
                <button type="button" class="btn btn-primary">Retour à l'accueil</button></a>

        {% elseif not gagnant is defined %}

        <p>
            Egalité ! <br>
        </p>

            {% set urlAccueil = path('accueil_index') %}
            <a href="{{ urlAccueil }}">
                <button type="button" class="btn btn-primary">Retour à l'accueil</button></a>

        {% endif %}

    </div>
{% endblock %}